@model WebsiteBanHang.Models.OrderDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Hóa đơn chi tiết</h2>
            <strong>Mã đơn hàng:</strong> #@Model.DonHang.ID <br>
            <strong>Ngày đặt:</strong> @Model.DonHang.NgayDat.Value.ToString("dd/MM/yyyy HH:mm")
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h5 class="mb-3">Thông tin khách hàng:</h5>
                    <div><strong>@Model.KhachHang.TenKH</strong></div>
                    <div>Địa chỉ: @Model.KhachHang.DiaChi</div>
                    <div>Email: @Model.KhachHang.Email</div>
                    <div>Điện thoại: @Model.KhachHang.SDT</div>
                </div>
            </div>

            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Sản phẩm</th>
                            <th class="right">Đơn giá</th>
                            <th class="center">Số lượng</th>
                            <th class="right">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int counter = 1; }
                        @foreach (var item in Model.chiTietDonHangs)
                        {
                            <tr>
                                <td class="center">@(counter++)</td>
                                <td class="left strong">@item.SanPham.TenSP</td>
                                <td class="right">@item.DonGia.Value.ToString("N0") ₫</td>
                                <td class="center">@item.SoLuong</td>
                                <td class="right">@((item.SoLuong * item.DonGia).Value.ToString("N0")) ₫</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-lg-4 col-sm-5 ml-auto">
                    <table class="table table-clear">
                        <tbody>
                            <tr>
                                <td class="left">
                                    <strong class="text-dark">Tổng cộng</strong>
                                </td>
                                <td class="right">
                                    <strong class="text-dark">
                                        @Model.chiTietDonHangs.Sum(ct => ct.SoLuong * ct.DonGia).Value.ToString("N0") ₫
                                    </strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<p class="mt-4">
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary"><< Quay lại trang chủ</a>
</p>
