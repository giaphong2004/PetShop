@model IEnumerable<WebsiteBanHang.Data.DonHang>

@{
    ViewBag.Title = "Lịch sử mua hàng";
}

<h2>Lịch sử mua hàng</h2>
<hr />

@if (Model.Any())
{
    <table class="table table-hover table-bordered">
        <thead class="thead-light">
            <tr>
                <th>
                    Mã đơn hàng
                </th>
                <th>
                    Ngày đặt
                </th>
                <th>
                    Trạng thái
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        #@Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @item.NgayDat.Value.ToString("dd/MM/yyyy HH:mm")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrangThai)
                    </td>
                    <td>
                        @Html.ActionLink("Xem chi tiết", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Bạn chưa có đơn hàng nào.</div>
}