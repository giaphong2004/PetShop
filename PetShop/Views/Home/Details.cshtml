@model WebsiteBanHang.Data.SanPham

@section Styles {
    <link rel="stylesheet" href="~/Content/css/detail.css">
}

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="product-container">
        <div class="row g-5">
            <!-- Product Image Column -->
            <div class="col-lg-6">
                <img src="~/Content/img/@Model.Img" class="img-fluid product-image-main" alt="@Model.TenSP">
            </div>

            <!-- Product Details Column -->
            <div class="col-lg-6 d-flex flex-column">
                <h1 class="product-title">@Model.TenSP</h1>

                <div class="my-4">
                    <div class="product-price-wrapper">
                        <span class="fs-5 text-muted d-block mb-2">Giá ưu đãi</span>
                        <p class="product-price mb-0">@string.Format("{0:N0}", Model.GiaSP) ₫</p>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-auto">
                    <a  href="@Url.Action("AddToCart", "ShoppingCart", new { id = Model.ID })" class="btn btn-primary btn-lg btn-add-to-cart">
                        <i class="fas fa-cart-plus me-2"></i>
                        Thêm vào giỏ hàng
                    </a>
                </div>

                <div class="policy-section">
                    <div class="policy-item"><i class="fas fa-truck-fast"></i>Giao hàng nhanh</div>
                    <div class="policy-item"><i class="fas fa-shield-alt"></i>Hàng chính hãng</div>
                    <div class="policy-item"><i class="fas fa-undo"></i>Đổi trả dễ dàng</div>
                </div>

                <div class="mt-3 text-center">
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.ID }, new { @class = "btn btn-outline-secondary btn-sm" })
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-outline-dark btn-sm" })
                </div>
            </div>
        </div>

        <!-- Product Information Tabs -->
        <div class="product-info-tabs">
            <ul class="nav nav-tabs" id="productInfoTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description-pane" type="button" role="tab" aria-controls="description-pane" aria-selected="true">Mô tả chi tiết</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="ingredients-tab" data-bs-toggle="tab" data-bs-target="#ingredients-pane" type="button" role="tab" aria-controls="ingredients-pane" aria-selected="false">Thành phần dinh dưỡng</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="usage-tab" data-bs-toggle="tab" data-bs-target="#usage-pane" type="button" role="tab" aria-controls="usage-pane" aria-selected="false">Hướng dẫn sử dụng</button>
                </li>
            </ul>
            <div class="tab-content" id="productInfoTabContent">
                <div class="tab-pane fade show active" id="description-pane" role="tabpanel" aria-labelledby="description-tab" tabindex="0">
                    <p>@Model.MoTa</p>
                </div>
                <div class="tab-pane fade" id="ingredients-pane" role="tabpanel" aria-labelledby="ingredients-tab" tabindex="0">
                    <p>@Model.ThanhPhan</p>
                </div>
                <div class="tab-pane fade" id="usage-pane" role="tabpanel" aria-labelledby="usage-tab" tabindex="0">
                    <p>@Model.HDSD</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


