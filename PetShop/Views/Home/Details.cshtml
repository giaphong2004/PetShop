@model WebsiteBanHang.Data.SanPham

@{
    ViewBag.Title = "Chi tiết sản phẩm - " + Model.TenSP;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/Content/css/detail.css" rel="stylesheet" />  
}

<div class="product-detail-container">
    <div class="product-container">
        <div class="row g-4">
            <!-- Left Column: Product Image -->
            <div class="col-lg-6">
                <img src="@Url.Content("~/Content/img/" + Model.Img)" 
                     alt="@Model.TenSP" 
                     class="product-image-main"
                     onerror="this.src='https://placehold.co/500x500/EFEFEF/333333?text=Sản+phẩm'">
            </div>

            <!-- Right Column: Product Details -->
            <div class="col-lg-6">
                <h1 class="product-title">@Model.TenSP</h1>
                
                <div class="price-box">
                    <p class="price-label mb-2">Giá ưu đãi</p>
                    <p class="product-price">@Model.GiaSP.ToString("N0") ₫</p>
                </div>

                <div class="d-grid">
                    <a href="@Url.Action("AddToCart", "ShoppingCart", new { id = Model.ID })" 
                       class="btn btn-primary btn-lg btn-add-to-cart">
                        <i class="fas fa-cart-plus me-2"></i>
                        Thêm vào giỏ hàng
                    </a>
                </div>

                <div class="feature-icons">
                    <div class="feature-item">
                        <i class="fas fa-truck-fast"></i>
                        <span>Giao hàng nhanh</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Hàng chính hãng</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-undo"></i>
                        <span>Đổi trả dễ dàng</span>
                    </div>
                </div>

                <a href="@Url.Action("Index", "Home")" class="back-link">
                    <i class="fas fa-arrow-left"></i>
                    <span>Quay lại danh sách</span>
                </a>
            </div>
        </div>

        <!-- Product Information Tabs -->
        <div class="product-tabs-section">
            <ul class="nav nav-tabs" id="productInfoTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" 
                            id="description-tab" 
                            data-bs-toggle="tab" 
                            data-bs-target="#description-pane" 
                            type="button" 
                            role="tab" 
                            aria-controls="description-pane" 
                            aria-selected="true">
                        Mô tả chi tiết
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" 
                            id="ingredients-tab" 
                            data-bs-toggle="tab" 
                            data-bs-target="#ingredients-pane" 
                            type="button" 
                            role="tab" 
                            aria-controls="ingredients-pane" 
                            aria-selected="false">
                        Thành phần dinh dưỡng
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" 
                            id="usage-tab" 
                            data-bs-toggle="tab" 
                            data-bs-target="#usage-pane" 
                            type="button" 
                            role="tab" 
                            aria-controls="usage-pane" 
                            aria-selected="false">
                        Hướng dẫn sử dụng
                    </button>
                </li>
            </ul>
            <div class="tab-content" id="productInfoTabContent">
                <div class="tab-pane fade show active" 
                     id="description-pane" 
                     role="tabpanel" 
                     aria-labelledby="description-tab" 
                     tabindex="0">
                    @if (!string.IsNullOrEmpty(Model.MoTa))
                    {
                        <p>@Model.MoTa</p>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có thông tin mô tả chi tiết cho sản phẩm này.</p>
                    }
                </div>
                <div class="tab-pane fade" 
                     id="ingredients-pane" 
                     role="tabpanel" 
                     aria-labelledby="ingredients-tab" 
                     tabindex="0">
                    @if (!string.IsNullOrEmpty(Model.ThanhPhan))
                    {
                        <p>@Model.ThanhPhan</p>
                    }
                    else
                    {
                        <p class="text-muted">Thông tin về thành phần dinh dưỡng không áp dụng cho sản phẩm này.</p>
                    }
                </div>
                <div class="tab-pane fade" 
                     id="usage-pane" 
                     role="tabpanel" 
                     aria-labelledby="usage-tab" 
                     tabindex="0">
                    @if (!string.IsNullOrEmpty(Model.HDSD))
                    {
                        <p>@Model.HDSD</p>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có hướng dẫn sử dụng cho sản phẩm này.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


