@model IEnumerable<WebsiteBanHang.Models.CartItem>

@section Styles {
    <link rel="stylesheet" href="~/Content/css/shoppingcart.css">
}

@{
    ViewBag.Title = "Giỏ hàng của bạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal tongTien = 0;
}

<div class="container shopping-cart-container" data-update-url="@Url.Action("UpdateCart", "ShoppingCart")">

    @if (Model != null && Model.Any())
    {
        <h1 class="mb-4 display-6 fw-bold">Giỏ hàng của bạn</h1>
        <div class="row g-4">
            <!-- Cột danh sách sản phẩm -->
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    var thanhTien = item.SanPham.GiaSP * item.soLuong;
                    tongTien += thanhTien;

                    <div class="cart-item-card" data-id="@item.SanPham.ID">
                        <img src="@Url.Content("~/Content/img/" + item.SanPham.Img)" alt="@item.SanPham.TenSP" class="product-image" />

                        <div class="product-details">
                            <h5 class="product-title">@item.SanPham.TenSP</h5>
                            <p class="product-price mb-0">@item.SanPham.GiaSP.ToString("N0") ₫</p>
                        </div>

                        <div class="quantity-controls mx-3">
                            <button class="quantity-btn minus-btn">-</button>
                            <input type="text" class="form-control quantity-input" value="@item.soLuong" readonly>
                            <button class="quantity-btn plus-btn">+</button>
                        </div>

                        <div class="item-total-price mx-3">
                            @thanhTien.ToString("N0") ₫
                        </div>

                        <div class="cart-item-actions">
                            <a href="@Url.Action("RemoveItem", "ShoppingCart", new { id = item.SanPham.ID })" class="remove-btn" title="Xóa sản phẩm">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>

            <!-- Cột tóm tắt đơn hàng -->
            <div class="col-lg-4">
                <div class="order-summary-card">
                    <h3 class="summary-title">Tóm tắt đơn hàng</h3>
                    <div class="summary-row">
                        <span>Tạm tính</span>
                        <span id="cart-subtotal">@tongTien.ToString("N0") ₫</span> 
                    </div>
                    <div class="summary-row">
                        <span>Phí vận chuyển</span>
                        <span>Miễn phí</span>
                    </div>
                    <hr>
                    <div class="summary-row mt-3">
                        <strong class="fs-5">Tổng cộng</strong>
                        <span class="summary-total" id="cart-total">@tongTien.ToString("N0") ₫</span>
                    </div>

                    <div class="d-grid mt-4">
                        <a href="#" class="btn btn-success btn-lg btn-checkout">Tiến hành thanh toán</a>
                    </div>
                    <div class="text-center mt-3">
                        <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i> Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="empty-cart-container">
            <i class="fas fa-shopping-cart empty-cart-icon mb-4"></i>
            <h2 class="mb-3">Giỏ hàng của bạn đang trống</h2>
            <p class="text-muted mb-4">Hãy bắt đầu lựa chọn những sản phẩm tuyệt vời nhất cho thú cưng của bạn.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">Bắt đầu mua sắm</a>
        </div>
    }
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@Scripts.Render("~/bundles/quantity")

    


