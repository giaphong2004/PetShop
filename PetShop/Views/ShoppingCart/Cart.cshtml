@using WebsiteBanHang.Models;
@{
    ViewBag.Title = "Cart";
}

@*<link href="accsets/css/cart.css">*@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
@{
    if (Session["CartSession"] != null)
    {
        using (Html.BeginForm("UpdateCart", "ShoppingCart", FormMethod.Post))
        {

    <section class="h-100 h-custom" >
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12" style="margin-top:56px;">
                    <div class="cart card-registration card-registration-2" style="border-radius: 15px;"margin-top:156px;>
                        <div class="card-body p-0">
                            <div class="row g-0">
                                <div class="col-lg-8">
                                    <div class="p-5">
                                        <div class="d-flex justify-content-between align-items-center mb-5">
                                            <h1 class="fw-bold mb-0">Shopping Cart</h1>
                                            <h6 class="mb-0 text-muted">3 items</h6>
                                        </div>
                                        <hr class="my-4">
                                        <tbody>
                                            @foreach (var cart in (List<CartItem>)Session["CartSession"])
                                            {
                                                double p = Convert.ToDouble(cart.Product.GiaSP);
                                                int q = Convert.ToInt32(cart.Quantity);
                                                double subtotal = p * q;
                                                <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                                        <img src="~/Content/img/@cart.Product.img"
                                                             class="img-fluid rounded-3" alt="Cotton T-shirt">
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                                       
                                                        <h6 class="mb-0">@cart.Product.TenSP</h6>
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                       <input type="text" class="form-control text-center quantity-amount" name="quantity" id="quantity" value="@cart.Quantity">
                                                    </div>
                                                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                        <h6 class="mb-0">@Html.FormatValue(subtotal, "{0:C}")</h6>
                                                    </div>
                                                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                                        <a href="@Html.ActionLink("Delete","XoaGioHang", "ShoppingCart", new { cart.Product.IdSP })"></a>
                                                    </div>
                                                </div>
                                            }
                                        </tbody>
                                        <hr class="my-4">

                                        <div class="pt-5">
                                            <h5 class="mb-0">
                                                <a href="#!" class="text-body">
                                                    <i class="fas fa-long-arrow-alt-left me-2"></i>@Html.ActionLink("Quay lại cửa hàng", "Index", "Home")
                                                </a>
                                            </h5>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-4 bg-body-tertiary">
                                    @{
                                        List<CartItem> temp = (List<CartItem>)Session["CartSession"];
                                        var total = temp.Sum(x => x.Quantity * x.Product.GiaSP);

                                    }
                                    <div class="p-5">
                                        <h3 class="fw-bold mb-5 mt-2 pt-1">Tóm tắt</h3>
                                        <hr class="my-4">

                                        <div class="d-flex justify-content-between mb-4">
                                            <h5 class="text-uppercase">items 3</h5>
                                            <h5>@Html.FormatValue(total, "{0:C}")</h5>
                                        </div>

                                        <h5 class="text-uppercase mb-3">Shipping</h5>

                                        <div class="mb-4 pb-2">
                                            <select data-mdb-select-init>
                                                <option value="1">Standard-Delivery- €5.00</option>
                                                <option value="2">Two</option>
                                                <option value="3">Three</option>
                                                <option value="4">Four</option>
                                            </select>
                                        </div>

                                        <h5 class="text-uppercase mb-3">Give code</h5>

                                        <div class="mb-5">
                                            <div data-mdb-input-init class="form-outline">
                                                <input type="text" id="form3Examplea2" class="form-control form-control-lg" />
                                                <label class="form-label" for="form3Examplea2">Enter your code</label>
                                            </div>
                                        </div>

                                        <hr class="my-4">

                                        <div class="d-flex justify-content-between mb-5">
                                            <h5 class="text-uppercase">Total price</h5>
                                            <h5>@Html.FormatValue(total, "{0:C}")</h5>
                                        </div>

                                        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-block btn-lg"
                                                data-mdb-ripple-color="dark">
                                            @Html.ActionLink("Thanh toán", "CheckOut", "ShoppingCart")
                                        </button>

                                        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-block btn-lg"
                                                data-mdb-ripple-color="dark">
                                            @Html.ActionLink("Thanh toán", "CheckOut", "ShoppingCart")
                                        </button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        
        
        
    </section>

        }
    }
    else
    {

        <div>
            <div class="hero" style="margin-top:156px;">
                <div class="container">
                    <div class="row justify-content-between">
                        <div class="col-lg-12">
                            <div class="intro-excerpt">
                                <h4 >Không có sản phẩm nào</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="padding: 50px">
                <div class="col-md-6">

                    <div class="row mb-5">
                        <div class="col-md-3">

                        </div>
                        <div class="col-md-6 ">
                            <a class="btn btn-outline-black btn-sm btn-block" @Html.ActionLink("Quay lại cửa hàng", "Index", "home")></a>
                        </div>
                        <div class="col-md-3">

                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
}

<script type="text/javascript">
    $(document).ready(function () {
        $(".quantity").keypress(function (e) {
            if (e.which != 8 && e.which != 0 && (e.which < 488 || e.which > 57)) {
                $("errmsg").html("Enter digits only!").show().faceOut("slow");
                return false;
            }
        });
    });
</script>