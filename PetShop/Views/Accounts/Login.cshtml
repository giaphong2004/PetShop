@model WebsiteBanHang.Models.User
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="vh-100" style="background-color: #438fff;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/Content/img/cat.jpg" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form>

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">Đăng nhập</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Đăng nhập để nhận nhiều ưu đãi từ chúng tôi</h5>

                                        <div class="form-outline mb-4">
                                            @Html.TextBoxFor(model => model.UserName, new { @type = "email", @id = "form2Example17", @class = "form-control form-control-lg" })
                                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "form-label" })
                                        </div>

                                        <div class="form-outline mb-4">

                                            @Html.PasswordFor(model => model.UserPassword, new { @id = "form2Example27", @class = "form-control form-control-lg" })
                                            @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })

                                            @Html.Label("Password", htmlAttributes: new { @class = "form-label" })
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="submit" href="@Url.Action("Login", "Admin/HomeAdmin/Danhmucsanpham")">Đăng nhập</button>
                                        </div>

                                        <a class="small text-muted fw-bold" href="#!">Quên mật khẩu?</a>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">Chưa có tài khoản? <a class="fw-bold " href="@Url.Action("Login", "Accounts/Signup")" style="color: #393f81;">Đăng ký ngay</a></p>
                                        <a href="#!" class="small text-muted fw-bold">Terms of use.</a>
                                        <a href="#!" class="small text-muted fw-bold">Privacy policy</a>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}

