<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản trị PetSmart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/css/layout.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)


</head>

<body>

    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <a href="@Url.Action("Index","Home", new { area = "" })">PetSmart</a>
            </div>
            <ul class="nav flex-column sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")"
                       href="@Url.Action("Index", "Home", new { area = "Admin" })">
                        <i class="fas fa-tachometer-alt icon"></i> Bảng điều khiển
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"].ToString() == "DonHang" ? "active" : "")"
                       href="@Url.Action("Index", "DonHang", new { area = "Admin" })">
                        <i class="fas fa-shopping-cart icon"></i> Đơn hàng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"].ToString() == "SanPham" ? "active" : "")"
                       href="@Url.Action("Index", "SanPham", new { area = "Admin" })">
                        <i class="fas fa-box icon"></i> Sản phẩm
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link sidebar-link" href="#">
                        <i class="fas fa-users icon"></i> Khách hàng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link sidebar-link" href="#">
                        <i class="fas fa-chart-line icon"></i> Phân tích
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link sidebar-link" href="#">
                        <i class="fas fa-cog icon"></i> Cài đặt
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                <img src="https://placehold.co/100x100/EFEFEF/333333?text=A" alt="Admin Avatar">
                <div>
                    <strong>@(Session["FullName"] ?? "Quản trị viên")</strong>
                    <br>
                    @using (Html.BeginForm("Logout", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutFormAdmin", style = "display:inline;" }))
                    {
                        @Html.AntiForgeryToken()
                        <small><a href="javascript:document.getElementById('logoutFormAdmin').submit()" style="color: rgba(255,255,255,0.8); text-decoration: none;">Đăng xuất</a></small>
                    }
                </div>
            </div>
        </nav>

        <!-- Nội dung của từng trang sẽ được render ở đây -->
        <main class="main-content">
            @RenderBody()
        </main>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @RenderSection("Scripts", required: false)

    <!-- Script xử lý active link cho sidebar -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarLinks = document.querySelectorAll('.sidebar-link');

            sidebarLinks.forEach(function (link) {
                link.addEventListener('click', function (event) {
                    // Chỉ xử lý cho các link placeholder (href="#")
                    if (this.getAttribute('href') === '#') {
                        event.preventDefault();

                        // Tìm link đang active và xóa lớp 'active' đi
                        const currentActive = document.querySelector('.sidebar-link.active');
                        if (currentActive) {
                            currentActive.classList.remove('active');
                        }

                        // Thêm lớp 'active' vào link vừa được nhấp
                        this.classList.add('active');
                    }
                    // Nếu link có href thực (không phải #), để nó điều hướng bình thường
                });
            });
        });
    </script>

</body>

</html>