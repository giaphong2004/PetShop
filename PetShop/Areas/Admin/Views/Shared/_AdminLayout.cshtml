<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản trị PetSmart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false)

    <style>
        :root {
            --primary-blue: #003B95;
            --light-gray-bg: #F4F6F9;
            --text-dark: #212529;
            --text-muted-light: #6C757D;
            --border-color: #dee2e6;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--light-gray-bg);
            color: var(--text-dark);
            overflow: hidden;
        }

        .wrapper {
            display: flex;
            height: 100vh;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 260px;
            background-color: var(--primary-blue);
            color: white;
            display: flex;
            flex-direction: column;
            transition: all 0.3s;
            flex-shrink: 0;
        }

        .sidebar-header {
            padding: 1.5rem;
            font-size: 1.5rem;
            font-weight: 700;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar-nav {
            flex-grow: 1;
            overflow-y: auto;
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: all 0.2s;
        }

            .sidebar-link .icon {
                margin-right: 1rem;
                width: 20px;
                text-align: center;
            }

            .sidebar-link:hover {
                background-color: rgba(255, 255, 255, 0.1);
                color: white;
            }

            .sidebar-link.active {
                background-color: white;
                color: var(--primary-blue);
                font-weight: 600;
            }

        .sidebar-footer {
            padding: 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
        }

            .sidebar-footer img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-right: 1rem;
            }

        /* Main Content Styles */
        .main-content {
            flex-grow: 1;
            padding: 2rem;
            overflow-y: auto;
        }
    </style>
</head>

<body>

    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-header">
                PetSmart
            </div>
            <ul class="nav flex-column sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")" 
                       href="@Url.Action("Index", "Home", new { area = "Admin" })">
                        <i class="fas fa-tachometer-alt icon"></i> Bảng điều khiển
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"].ToString() == "DonHang" ? "active" : "")" 
                       href="@Url.Action("Index", "DonHang", new { area = "Admin" })">
                        <i class="fas fa-shopping-cart icon"></i> Đơn hàng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link sidebar-link" href="#">
                        <i class="fas fa-box icon"></i> Sản phẩm
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link sidebar-link" href="#">
                        <i class="fas fa-users icon"></i> Khách hàng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link sidebar-link" href="#">
                        <i class="fas fa-chart-line icon"></i> Phân tích
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link sidebar-link" href="#">
                        <i class="fas fa-cog icon"></i> Cài đặt
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                <img src="https://placehold.co/100x100/EFEFEF/333333?text=A" alt="Admin Avatar">
                <div>
                    <strong>Quản trị viên</strong>
                    <br>
                    <small>Đăng xuất</small>
                </div>
            </div>
        </nav>

        <!-- Nội dung của từng trang sẽ được render ở đây -->
        <main class="main-content">
           @RenderBody()
        </main>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

    <!-- Script xử lý active link cho sidebar -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarLinks = document.querySelectorAll('.sidebar-link');

            sidebarLinks.forEach(function (link) {
                link.addEventListener('click', function (event) {
                    // Chỉ xử lý cho các link placeholder (href="#")
                    if (this.getAttribute('href') === '#') {
                        event.preventDefault();
                        
                        // Tìm link đang active và xóa lớp 'active' đi
                        const currentActive = document.querySelector('.sidebar-link.active');
                        if (currentActive) {
                            currentActive.classList.remove('active');
                        }

                        // Thêm lớp 'active' vào link vừa được nhấp
                        this.classList.add('active');
                    }
                    // Nếu link có href thực (không phải #), để nó điều hướng bình thường
                });
            });
        });
    </script>

</body>

</html>