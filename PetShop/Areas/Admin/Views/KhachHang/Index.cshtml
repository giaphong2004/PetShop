@model IEnumerable<WebsiteBanHang.Data.KhachHang>

@{
    ViewBag.Title = "Quản lý Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Areas/Admin/Content/css/qlykhachhang.css" rel="stylesheet" />
}

<header class="main-header">
    <h1 class="header-title">Quản lý khách hàng</h1>
</header>

<div class="content-card">
    <div class="card-toolbar">
        @using (Html.BeginForm("Index", "KhachHang", FormMethod.Get, new { @class = "d-flex flex-wrap gap-2 w-100" }))
        {
            <div class="input-group" style="max-width: 300px;">
                <span class="input-group-text bg-white border-end-0"><i class="fas fa-search"></i></span>
                <input type="text" name="searchTerm" class="form-control border-start-0" 
                       placeholder="Tìm theo tên, email..." value="@ViewBag.SearchTerm">
            </div>
            
            <button type="submit" class="btn btn-primary mx-4">
                <i class="fas fa-filter me-1"></i> Tìm kiếm
            </button>
            
            if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
            {
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-1"></i> Xóa bộ lọc
                </a>
            }
        }
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>MÃ KH</th>
                    <th>THÔNG TIN KHÁCH HÀNG</th>
                    <th>SỐ ĐIỆN THOẠI</th>
                    <th>ĐỊA CHỈ</th>
                    <th class="text-center">SỐ ĐƠN HÀNG</th>
                    <th class="text-center">TRẠNG THÁI</th>
                    <th class="text-center">HÀNH ĐỘNG</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var customer in Model)
                    {
                        var orderCount = customer.DonHangs != null ? customer.DonHangs.Count : 0;
                        var hasUser = customer.User != null;
                        
                        <tr>
                            <td><strong>#@customer.ID</strong></td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="https://ui-avatars.com/api/?name=@Uri.EscapeDataString(customer.TenKH ?? "KH")&background=0d6efd&color=fff&size=50" 
                                         alt="@customer.TenKH" 
                                         class="customer-avatar me-3">
                                    <div>
                                        <div class="customer-name">@customer.TenKH</div>
                                        <div class="customer-email">
                                            @if (!string.IsNullOrEmpty(customer.Email))
                                            {
                                                <i class="fas fa-envelope me-1"></i>@customer.Email
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có email</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(customer.SDT))
                                {
                                    <i class="fas fa-phone me-1"></i>@customer.SDT
                                }
                                else
                                {
                                    <span class="text-muted">Chưa cập nhật</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(customer.DiaChi))
                                {
                                    @customer.DiaChi
                                }
                                else
                                {
                                    <span class="text-muted">Chưa cập nhật</span>
                                }
                            </td>
                            <td class="text-center">
                                <span class="order-count-badge">@orderCount đơn</span>
                            </td>
                            <td class="text-center">
                                @if (hasUser)
                                {
                                    <span class="status-badge status-active">
                                        <i class="fas fa-check-circle me-1"></i>Có tài khoản
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge status-inactive">
                                        <i class="fas fa-user me-1"></i>Khách vãng lai
                                    </span>
                                }
                            </td>
                            <td class="text-center actions-cell">
                                <a href="@Url.Action("Details", new { id = customer.ID })" title="Xem chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-5">
                            <i class="fas fa-users fa-3x mb-3 d-block"></i>
                            <p>Không tìm thấy khách hàng nào</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card-footer-nav">
            <span>Tổng số: <strong>@Model.Count()</strong> khách hàng</span>
        </div>
    }
</div>

@section Scripts {
    <script src="~/Areas/Admin/Content/js/qlykhachhang.js"></script>
    <script>
        // Hiển thị thông báo từ TempData
        @if (TempData["Success"] != null)
        {
            <text>
            showNotification('success', '@Html.Raw(TempData["Success"])');
            </text>
        }

        @if (TempData["Error"] != null)
        {
            <text>
            showNotification('error', '@Html.Raw(TempData["Error"])');
            </text>
        }
    </script>
}
