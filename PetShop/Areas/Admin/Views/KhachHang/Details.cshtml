@model WebsiteBanHang.Data.KhachHang

@{
    ViewBag.Title = "Chi tiết khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Areas/Admin/Content/css/ctietkhachhang.css" rel="stylesheet" />
}

<header class="main-header">
    <h1 class="header-title">Chi tiết khách hàng</h1>
</header>

<div class="content-card">
    <div class="customer-header">
        <img src="https://ui-avatars.com/api/?name=@Uri.EscapeDataString(Model.TenKH ?? "KH")&background=0d6efd&color=fff&size=120" 
             alt="@Model.TenKH" 
             class="customer-avatar-large">
        <div class="customer-header-info">
            <h2>@Model.TenKH</h2>
            <div class="customer-id">Mã khách hàng: #@Model.ID</div>
            <div class="mt-2">
                @if (Model.User != null)
                {
                    <span class="status-badge status-active">
                        <i class="fas fa-check-circle me-1"></i>Có tài khoản
                    </span>
                }
                else
                {
                    <span class="status-badge status-inactive">
                        <i class="fas fa-user me-1"></i>Khách vãng lai
                    </span>
                }
            </div>
        </div>
    </div>

    <div class="info-grid">
        <div class="info-item">
            <div class="info-label">Email</div>
            <div class="info-value">
                @if (!string.IsNullOrEmpty(Model.Email))
                {
                    <i class="fas fa-envelope"></i>@Model.Email
                }
                else
                {
                    <span class="text-muted">Chưa cập nhật</span>
                }
            </div>
        </div>

        <div class="info-item">
            <div class="info-label">Số điện thoại</div>
            <div class="info-value">
                @if (!string.IsNullOrEmpty(Model.SDT))
                {
                    <i class="fas fa-phone"></i>@Model.SDT
                }
                else
                {
                    <span class="text-muted">Chưa cập nhật</span>
                }
            </div>
        </div>

        <div class="info-item">
            <div class="info-label">Địa chỉ</div>
            <div class="info-value">
                @if (!string.IsNullOrEmpty(Model.DiaChi))
                {
                    <i class="fas fa-map-marker-alt"></i>@Model.DiaChi
                }
                else
                {
                    <span class="text-muted">Chưa cập nhật</span>
                }
            </div>
        </div>

        <div class="info-item">
            <div class="info-label">Tên đăng nhập</div>
            <div class="info-value">
                @if (Model.User != null && !string.IsNullOrEmpty(Model.User.UserName))
                {
                    <i class="fas fa-user-circle"></i>@Model.User.UserName
                }
                else
                {
                    <span class="text-muted">Không có tài khoản</span>
                }
            </div>
        </div>
    </div>

    <div class="section-title">
        <i class="fas fa-shopping-cart"></i>Lịch sử đơn hàng
    </div>

    <div class="order-list">
        @if (Model.DonHangs != null && Model.DonHangs.Any())
        {
            foreach (var order in Model.DonHangs.OrderByDescending(d => d.NgayDat))
            {
                var statusClass = "status-processing";
                switch (order.TrangThai)
                {
                    case "Đang xử lý":
                        statusClass = "status-processing";
                        break;
                    case "Đang giao":
                        statusClass = "status-shipping";
                        break;
                    case "Đã giao":
                        statusClass = "status-completed";
                        break;
                    case "Đã hủy":
                        statusClass = "status-cancelled";
                        break;
                }

                // Tính tổng tiền từ chi tiết đơn hàng
                decimal tongTien = 0;
                if (order.ChiTietDonHangs != null && order.ChiTietDonHangs.Any())
                {
                    tongTien = order.ChiTietDonHangs.Sum(ct => (ct.SoLuong ?? 0) * (ct.DonGia ?? 0));
                }

                <div class="order-item">
                    <div class="order-info">
                        <div class="order-id">
                            <i class="fas fa-receipt me-2"></i>Đơn hàng #@order.ID
                        </div>
                        <div class="order-date">
                            <i class="far fa-calendar-alt me-1"></i>
                            @(order.NgayDat.HasValue ? order.NgayDat.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")
                        </div>
                    </div>
                    <div class="text-center mx-4">
                        <span class="order-status @statusClass">@order.TrangThai</span>
                    </div>
                    <div class="text-end">
                        <div class="order-price text-danger">@tongTien.ToString("N0") ₫</div>
                        <a href="@Url.Action("Details", "DonHang", new { id = order.ID })" class="btn btn-sm btn-outline-primary mt-2">
                            <i class="fas fa-eye me-1"></i>Chi tiết
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-shopping-cart"></i>
                <p>Khách hàng chưa có đơn hàng nào</p>
            </div>
        }
    </div>

    <div class="action-buttons">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/Areas/Admin/Content/js/qlykhachhang.js"></script>
}
